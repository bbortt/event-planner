<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Event.
    -->
    <changeSet id="20200811150031-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="event_section"
                                 constraintName="fk_event_section_event_id"
                                 referencedColumnNames="id"
                                 referencedTableName="event"/>

        <addForeignKeyConstraint baseColumnNames="section_id"
                                 baseTableName="event_section"
                                 constraintName="fk_event_section_section_id"
                                 referencedColumnNames="id"
                                 referencedTableName="section"/>
        
        <addForeignKeyConstraint baseColumnNames="responsibility_id"
                                 baseTableName="event"
                                 constraintName="fk_event_responsibility_id"
                                 referencedColumnNames="id"
                                 referencedTableName="responsibility"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="event"
                                 constraintName="fk_event_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

    </changeSet>
</databaseChangeLog>
