input CreateLocalityInput {
  name: String!
  description: String
  parentLocalityId: ID
}

input UpdateLocalityInput {
  name: String
  description: String
}

type Locality {
  id: ID!
  name: String!
  description: String
  project: Project!
  parent: Locality
  children: [Locality]
}

extend type Query {
  listRootLocalities(projectId: ID!): [Locality]!
  listChildren(localityId: ID!): [Locality]!
}

extend type Mutation {
  createLocality(projectId: ID!, locality: CreateLocalityInput!): Locality!
  updateLocality(locality: UpdateLocalityInput!): Locality!
  moveLocality(fromLocalityId: ID, toLocalityId: ID): Locality!
}
